<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %>
  </head>


  <body>
    <%= render 'layouts/header' %>
    <div class="container">
      <div class="notification">
        <% if flash[:notice] %>
            <div class="message" id="notice"> <%= flash[:notice] %> </div>
        <% elsif flash[:warning] %>
            <div class="message" id="warning"> <%= flash[:warning] %> </div>
        <% elsif flash[:alert] %>
            <div class="message" id="warning"> <%= flash[:warning] %> </div>
        <% end %>

        <% if false %> <%# commented out %>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
        <% end %>
      </div>

      <%= yield %>
      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>
