<table>
  <tr>
    <th>Name</th>
    <th>Building</th>
    <th>Category</th>
    <th>Cost ($)</th>
    <th>Time to spend(min)</th>
  </tr>

  <% @cafes.each do |cafe| %>
      <tr>
        <td><%= cafe.name %></td>
        <td><%= cafe.bldg %></td>
        <td><%= cafe.category %></td>
        <td><%= cafe.price %></td>
        <td><%= cafe.time %></td>
        <td><%= link_to 'Show', cafe %></td>
        <td><%= link_to 'Edit', edit_cafe_path(cafe) %></td>
        <td><%= link_to 'Delete', cafe, method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>

<%=  link_to 'Add new cafe', new_cafe_path %>