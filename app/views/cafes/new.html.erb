<h2>Add new cafe information</h2>

<%= form_tag cafes_path, :method => :post do %>
  <%= label :cafe, :name, 'Name' %>
    <%= text_field :cafe, :name %><br />

  <%= label :cafe, :place, 'Building' %>
    <%= text_field :cafe, :place %><br />

  <%= label :cafe, :category, 'Category' %>
    <%= select :cafe, :category, ['General','Italian','Chinese','Indian','Japanese'] %><br />

  <%= label :cafe, :price, 'How much did you paid?' %>
    <%= text_field :cafe, :price %><br />

  <%= label :cafe, :time, 'How long did you spend (in min)?' %>
    <%= text_field :cafe, :time %><br />

  <%= label :cafe, :description, 'Do you have any details to share?' %>
    <%= text_field :cafe, :description %><br />

  <%= submit_tag 'Add this cafe' %>

<% end %>